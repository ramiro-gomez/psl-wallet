{
	"settings": {
	  "import/resolver": {
		"typescript": {}
	  },
	},
	"compilerOptions": {
		"target": "es2018",
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "./dist",
		"strict": true,
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"resolveJsonModule": true	
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"],
}

{
	"settings": {
		"import/resolver": {
		  "typescript": {}
		}
	},
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
		"no-tabs": "off",
		"indent": [ "error", "tab", { "SwitchCase": 1 } ],
		"no-console": "off",
		"import/extensions": "off",
		"object-curly-newline": "off"
    }
}
